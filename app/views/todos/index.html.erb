<h1>Todos</h1>

<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= link_to todo.title, todo%></td>
        <td><%= todo.detail %></td>
        <td>
          <%= link_to todo, method: :delete, data: { confirm: 'Have you finished this ToDo?' } do %>
            <i class="fa fa-check" style="color: #2ecc71;"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path, type: 'button', class: 'btn btn-primary' %>
